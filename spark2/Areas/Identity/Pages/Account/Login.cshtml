@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    ViewData["ShowSidebar"] = false;
}

 
<div class="container ">

    @* <div class="container bg-gradient-danger  "> *@

        <!-- Outer Row -->
        <div class="row justify-content-center ">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-12">
                                <div class="p-5  ">
                                    <div class="text-center  ">
                                        <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                                    </div>
                                    <form class="user" id="account" method="post">
                                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                                        <div class="form-group">
                                            <input asp-for="Input.Email" autocomplete="username" aria-required="true" class="form-control form-control-user"
                                                   id="exampleInputEmail" aria-describedby="emailHelp"
                                                   placeholder="Enter Email Address...">
                                            <span asp-validation-for="Input.Email" class="text-danger"></span>

                                        </div>
                                        <div class="form-group">
                                            <input asp-for="Input.Password" autocomplete="current-password" aria-required="true" placeholder="password" class="form-control form-control-user"
                                                   id="exampleInputPassword" placeholder="Password">
                                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">                                           

                                            <div class="custom-control custom-checkbox small">
                                                <input asp-for="Input.RememberMe" class="custom-control-input" id="customCheck" />
                                                <label class="custom-control-label" for="customCheck">
                                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                                </label>
                                            </div>

                                        </div>
                                        <button id="login-submit" type="submit" class="btn btn-danger btn-user btn-block">
                                            Login
                                        </button>
                                        
                                        @if (Model.ExternalLogins?.Count > 0)
                                        {
                                            @foreach (var provider in Model.ExternalLogins)
                                            {
                                                <button type="submit"
                                                        class="btn btn-user btn-block btn-outline-primary"
                                                        name="provider"
                                                        value="@provider.Name"
                                                        formaction="@Url.Page("./ExternalLogin", new { provider = provider.Name, returnUrl = Model.ReturnUrl })">
                                                    <i class="fab fa-@provider.Name.ToLower() fa-fw"></i> Login with @provider.DisplayName
                                                </button>
                                            }
                                        }
                                                                     
                                    @*     <button href="index.html" class="btn btn-google btn-user btn-block"> *@
                                    @*         <i class="fab fa-google fa-fw"></i> Login with Google *@
                                    @*     </button> *@
                                    @* <button href="index.html" class="btn btn-facebook btn-user btn-block "> *@
                                    @*         <i class="fab fa-facebook-f fa-fw"></i> Login with Facebook *@
                                    @*     </button> *@
                                    </form>
                                   
                                    @* <div class="text-center"> *@
                                    @* <a class="small text-danger" id="forgot-password" asp-page="./ForgotPassword" >Forgot Password?</a> *@
                                    @* </div> *@
                                    <div class="text-center">
                                    <a class="small text-danger" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Create an Account!</a>
                                    </div>

                                    @* <div class="text-center"> *@
                                    @* <a class="small text-danger" id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a> *@
                                    @* </div> *@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
